<%= link_to "Marketplace", root_path %>
<div style="text-align:center;background-color:powderblue;width:50%;margin:auto">
    <h1>Welcome</h1>
    <h3><%= link_to "Create account", signup_path %>. new to marketplace?</h3>
    <h3>Sign-in. already have an account?</h3>

    <%= form_with url: login_path do |f| %>
        <%= f.text_field :username, placeholder: 'Username' %><br><br>
        <%= f.password_field :password, placeholder: 'Password' %><br><br>
        <%= f.submit "Submit" %>
    <% end %>
</div>